<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<FlowPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginUIController">
   <children>
      <AnchorPane prefHeight="565.0" prefWidth="692.0" style="-fx-background-color: linear-gradient(to right top, #051937, #004d7a, #008793, #00bf72, #a8eb12);">
         <children>
            <VBox layoutX="186.0" layoutY="220.0" prefHeight="88.0" prefWidth="320.0">
               <children>
                  <Label prefHeight="42.0" prefWidth="324.0" text="Username" textFill="WHITE" />
                  <TextField fx:id="usernameTextField" prefHeight="46.0" prefWidth="320.0" />
               </children>
            </VBox>
            <VBox layoutX="186.0" layoutY="306.0" prefHeight="88.0" prefWidth="320.0">
               <children>
                  <Label prefHeight="42.0" prefWidth="324.0" text="Password" textFill="WHITE">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="passwordTextField" prefHeight="46.0" prefWidth="320.0" />
               </children>
            </VBox>
            <Button fx:id="loginButton" layoutX="309.0" layoutY="421.0" mnemonicParsing="false" onAction="#handleLoginButtonClick" prefHeight="32.0" prefWidth="62.0" text="Login" />
            <Label layoutX="228.0" layoutY="114.0" prefHeight="74.0" prefWidth="237.0" text="Administration">
               <font>
                  <Font name="System Bold" size="33.0" />
               </font>
            </Label>
            <Label fx:id="errorLabel" layoutX="180.0" layoutY="485.0" prefHeight="17.0" prefWidth="320.0" textFill="RED" />
            <Button fx:id="backButton" layoutX="616.0" layoutY="519.0" mnemonicParsing="false" onAction="#handleBackButtonClick" prefHeight="32.0" prefWidth="62.0" text="Back" />
         </children>
      </AnchorPane>
   </children>
</FlowPane>
