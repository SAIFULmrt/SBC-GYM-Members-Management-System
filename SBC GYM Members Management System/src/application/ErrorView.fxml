<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<FlowPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ErrorViewController">
   <children>
      <FlowPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="266.0" prefWidth="410.0" style="-fx-background-color: linear-gradient(to right top, #051937, #004d7a, #008793, #00bf72, #a8eb12);">
               <children>
                  <Label fx:id="errorMessageLabel" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="120.0" prefWidth="363.0" textAlignment="CENTER" textFill="RED" textOverrun="CLIP" wrapText="true">
                     <VBox.margin>
                        <Insets left="23.0" top="50.0" />
                     </VBox.margin>
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
                  <Button fx:id="closeButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleCloseButtonClicked" text="Close">
                     <VBox.margin>
                        <Insets left="180.0" top="50.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </FlowPane>
   </children>
</FlowPane>
